<aiml version="1.0.1" encoding="UTF-8">

    <!-- Use that, think, condition -->

    <category>
        <pattern>HELLO</pattern>
        <template>
            <random>
                <li>Hello!</li>
                <li>Hi their!</li>
                <li>Greetings!</li>
            </random>
        </template>
    </category>

    <!-- Escape phrases -->

    <category>
        <pattern> EXIT </pattern>
        <template>#0$Goodbye</template>
    </category>

    <category>
        <pattern> GOODBYE </pattern>
        <template><srai>EXIT</srai></template>
    </category>

    <category>
        <pattern> * GOODBYE * </pattern>
        <template><srai>EXIT</srai></template>
    </category>

    <category>
        <pattern> * GOODBYE </pattern>
        <template><srai>EXIT</srai></template>
    </category>

    <category>
        <pattern> GOODBYE * </pattern>
        <template><srai>EXIT</srai></template>
    </category>

    <!-- set name -->

    <category>
        <pattern>MY NAME IS *</pattern>
        <template>Hi <set name = "name"><star /></set>! I'll make sure to remember that</template>
    </category>

    <category>
        <pattern>DO YOU KNOW MY NAME</pattern>

        <template>
            <condition name = "name">
                <li value = "">Sorry, I'm not sure what your name is.</li>
                <li>Yes! Your name is <get name="name"/></li>
            </condition>
        </template>
    </category>

    <!-- Gets a monsters susceptibility -->

    <category>
        <pattern>WHAT IS A * WEAK TO</pattern>
        <template>#2$<star index="1"></star></template>
    </category>

    <!-- QA pairs with Cosin similarity -->

    <category>
        <pattern>WHAT *</pattern>
        <template>#3$what <star index="1"></star></template>
    </category>

    <category>
        <pattern>TELL *</pattern>
        <template>#3$tell <star index="1"></star></template>
    </category>

    <!-- default reaction -->
    <category>
    <pattern>*</pattern>
      <!--  <template>I'm sorry, I don't understand. Please try again</template>  -->
        <template>#3$<star index="1"></star></template>
    </category>
</aiml>