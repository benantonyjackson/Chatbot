<aiml version="1.0.1" encoding="UTF-8">

    <category>
        <pattern>HELLO</pattern>
        <template>Hi there!</template>
    </category>

    <!-- Escape phrases -->

    <category>
        <pattern> EXIT </pattern>
        <template>#0$Goodbye</template>
    </category>

    <category>
        <pattern> GOODBYE </pattern>
        <template><srai>EXIT</srai></template>
    </category>

    <category>
        <pattern> * GOODBYE * </pattern>
        <template><srai>EXIT</srai></template>
    </category>

    <category>
        <pattern> * GOODBYE </pattern>
        <template><srai>EXIT</srai></template>
    </category>

    <category>
        <pattern> GOODBYE * </pattern>
        <template><srai>EXIT</srai></template>
    </category>

    <!-- set name -->

    <category>
        <pattern>MY NAME IS *</pattern>
        <template>#1$<star index="1"/></template>

    </category>

    <category>
        <pattern>WHAT IS A * WEAK TO</pattern>
        <template>#2$<star index="1"></star> </template>
    </category>

    <!-- default reaction -->
    <category>
    <pattern>*</pattern>
        <template>I'm sorry, I don't understand. Please try again</template>
    </category>
</aiml>