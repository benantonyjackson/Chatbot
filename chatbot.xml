<aiml version="2.0" encoding="UTF-8">
    <!-- Use that, think, topic -->

    <!-- General conversation -->

    <category>
        <pattern>THANK YOU</pattern>
        <template>
            <random>
                <li>Your very welcome!</li>
                <li>No problem!</li>
                <li>Any time!</li>
            </random>
        </template>
    </category>

    <category>
        <pattern>HOW ARE YOU</pattern>
        <template>I'm very good thanks! What would you like to ask me?</template>
    </category>

    <category>
        <pattern>HELLO</pattern>
        <template>
            <random>
                <li>Hello!</li>
                <li>Hi their!</li>
                <li>Greetings!</li>
            </random>
        </template>
    </category>

    <category>
        <pattern>HI</pattern>
        <template><srai>HELLO</srai></template>
    </category>

    <!-- Escape phrases -->

    <category>
        <pattern> EXIT </pattern>
        <template>#0$Goodbye</template>
    </category>

    <category>
        <pattern> GOODBYE </pattern>
        <template><srai>EXIT</srai></template>
    </category>

    <!-- set name -->

    <topic name="setname">
        <category>
            <pattern>YES</pattern>
            <template>Ok, what is your name?</template>
        </category>

        <category>
            <pattern>*</pattern>
            <template>Hi <set name = "name"><star /></set>! I'll make sure to remember that<think><set name="topic">*</set></think></template>
        </category>
    </topic>

    <category>
        <pattern>MY NAME IS *</pattern>
        <template>Hi <set name = "name"><star /></set>! I'll make sure to remember that</template>
    </category>

    <category>
        <pattern>DO YOU KNOW MY NAME</pattern>
        <template>
            <condition name = "name">
                <li value = ""><set name="topic">setname</set>Sorry, I'm not sure what your name is. Would you like to tell me?</li>
                <li>Yes! Your name is <get name="name"/></li>
            </condition>
        </template>
    </category>

    <!-- Gets a monsters description -->

    <category>
        <pattern>WHAT IS A *</pattern>
        <template>#1$<star index="1"></star></template>
    </category>

    <category>
        <pattern>DESCRIBE A *</pattern>
        <template>#1$<star index="1"></star></template>
    </category>

    <!-- Gets a monsters susceptibility -->

    <category>
        <pattern>WHAT IS A * WEAK TO</pattern>
        <template>#2$<star index="1"></star></template>
    </category>

    <!-- default reaction -->

   <category>
    <pattern>*</pattern>
       <template>#3$<star index="1"></star></template>
    </category>

</aiml>